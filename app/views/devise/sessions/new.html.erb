<div class="user_info_form_title">
  ログイン
</div>

<div class="user_info_form_wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "input_box" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input_box" %>
    </div>

    <div class="google_sign_in_wrapper">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
        <%= image_tag "btn_google_signin_light_normal_web.png", class: "sign_in_google" %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" ,class:"profile_next_btn"  %>
    </div>
  <% end %>
</div>

<div class="top_page_link">
  <%= link_to "トップページへ戻る", root_path %>
</div>

