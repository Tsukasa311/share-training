<header class="main_header">
  <div class="left_header">
    <div class="app_title">
      <%= link_to "ShareTraining", root_path, class: "app_logo" %>
    </div>
    <% if user_signed_in? %>
      <div class="current_user_name">
        こんにちは！<%= current_user.nickname%>さん
      </div>
    <% end %>
  </div>
  <div class="right_header">
    <div class="sign_in_box">
      <% if user_signed_in? %>
        <%= link_to "マイページ", user_path(current_user.id), class: "header_btn"%>
        <%= link_to "Shareする", new_post_path, class: "header_btn"%>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header_btn"%>
      <% else %>
        <%= link_to "新規登録", new_user_path, class: "header_btn" %>
        <%= link_to "ログイン", new_user_session_path, class: "header_btn"%>
      <% end %>
    </div>
  </div>
</header>