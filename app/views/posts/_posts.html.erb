<div class="index_wrapper">
  <div class="shared_posts_wrapper">
    <div class="shared_post">
      <div class="user_wrapper">
        <div class="user_info">
          <div class="user_icon">
            <%= image_tag post.user.profile.image.variant(resize: '150 x 250'), class: "post_user_image" if post.user.profile.image.attached? %>
          </div>
          <div class="user_name">
            <%= link_to post.user.nickname, user_path(post.user_id) %>
          </div>
        </div>
        <div class="user_introduction">
          <%= safe_join(post.user.profile.introduction.split("\n"),tag(:br)) %>
        </div>
      </div>
      <div class="post_text_wrapper">
        <div class="more">
          <span><%= image_tag 'arrow.png' %></span>
          <ul class="more_lists_wrapper">
            <li class="more_lists">
              <%= link_to "詳細", post_path(post.id), class: "show_btn" %>
            </li>
            <% if current_user.id == post.user_id%>
              <li class="more_lists">
                <%= link_to "削除", post_path(post.id), method: :delete, class: "show_btn", data: { confirm: '本当に削除しますか？' }  %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="shared_text">
          <%= safe_join(post.text.split("\n"),tag(:br)) %>
        </div>
        <div class="tag_list_field">
          <ul>
            <li>#<%= post.part.name %>
            </li>
            <li>#<%= post.equipment.name %>
            </li>
            <li>#<%= post.place.name %>
            </li>
          </ul>

          <div id="muscle_count">
            <h3>いいね: <%= post.likes.count %></h3>
            <% if current_user.already_liked?(post) %>
              <%= button_to 'いいねを取り消す', post_like_path(post.id, post.likes.ids), method: :delete, class: "remove_like_btn" %>
            <% else %>
              <%= button_to 'いいね', post_likes_path(post), class: "like_btn" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>