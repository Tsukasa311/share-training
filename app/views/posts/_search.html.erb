<div class="search_wrapper">
  <div class="search_form">
    <%= form_with(url: search_posts_path, local: true, method: :get) do |f| %>
      <%= f.text_field :keyword, placeholder: "投稿を検索する", class: "search_text_field"%>
      <%= f.submit "検索", class: "search_btn"%>
    <% end %>
  </div>
</div>

