 <h3>いいね: <%= post.likes.count %></h3>

<% if current_user.already_liked?(post) %>
  <%= button_to 'いいねを取り消す', post_like_path(post.id, post.likes.ids), method: :delete, class: "remove_like_btn", remote: true %>
<% else %>
  <%= button_to 'いいね', post_likes_path(post) ,class: "like_btn", method: :post, remote: true %>
<% end %>