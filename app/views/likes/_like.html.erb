<% if current_user.already_liked?(post) %>
  <%= button_to post_like_path(post.id, post.likes.ids), method: :delete, remote: true do %>
    <div class="like_wrapper">
      <div class="liked_btn_icon"></div>
      <div class="like_count">NiceTraining:<%= post.likes.count %></div>
    </div>
  <% end %>
<% else %>
  <%= button_to post_likes_path(post.id) ,method: :post, remote: true do %>
    <div class="like_wrapper">
      <div class="like_btn_icon"></div>
      <div class="like_count">NiceTraining:<%= post.likes.count %></div>
    </div>
  <% end %>
<% end %>